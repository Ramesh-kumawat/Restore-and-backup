<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cl_data"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_icon1"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_marginStart="50px"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:lines="1"
        android:ellipsize="end"
        android:paddingRight="4dp"
        android:textColor="@color/black"

        android:text="@string/app_name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toEndOf="@+id/img_icon1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_version1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="version"
        android:layout_marginRight="23dp"
        android:maxLines="1"
        android:ellipsize="end"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_name1"
        app:layout_constraintTop_toBottomOf="@+id/tv_name1" />

    <TextView
        android:id="@+id/app_data1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data"
        app:layout_constraintStart_toStartOf="@+id/app_version1"
        app:layout_constraintTop_toBottomOf="@+id/app_version1" />

    <TextView
        android:id="@+id/app_date1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="date"
        app:layout_constraintBottom_toBottomOf="@+id/app_data1"
        app:layout_constraintStart_toEndOf="@+id/app_data1"
        app:layout_constraintTop_toTopOf="@+id/app_data1"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>