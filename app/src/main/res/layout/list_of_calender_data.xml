<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_calender">


    <TextView
        android:id="@+id/tv_name3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="AS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_icon4"
        android:layout_width="26dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_baseline_calendar_month_24"
        app:layout_constraintStart_toStartOf="@+id/name_calender"
        app:layout_constraintTop_toBottomOf="@+id/name_calender" />

    <TextView
        android:id="@+id/name_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="name"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/tv_name3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="Date"
        app:layout_constraintBottom_toBottomOf="@+id/img_icon4"
        app:layout_constraintStart_toEndOf="@+id/img_icon4"
        app:layout_constraintTop_toTopOf="@+id/img_icon4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/day_calender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        app:layout_constraintBottom_toBottomOf="@+id/date_calender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toEndOf="@+id/date_calender"
        app:layout_constraintTop_toTopOf="@+id/date_calender" />


</androidx.constraintlayout.widget.ConstraintLayout>